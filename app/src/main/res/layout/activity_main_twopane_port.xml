<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.example.bigpig.FirstFragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout="@layout/first_fragment"
        app:layout_constraintBottom_toTopOf="@+id/second_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.example.bigpig.SecondFragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout="@layout/second_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>